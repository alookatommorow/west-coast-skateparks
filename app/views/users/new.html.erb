<div class='center-text'>
  <h1>Sign Up</h1>
</div>

<div class="ui one column stackable center aligned page grid">
  <div class="column twelve wide">
    <div class="ui form sign-up-form">
      <%= form_for :user, url: users_path do |f| %>

        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <%= f.submit 'Register', class: 'ui green button' %>

      <% end %>

    </div>

  </div>
</div>

