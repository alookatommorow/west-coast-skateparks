<!DOCTYPE html>
<html>
  <head>
    <title>West Coast Skateparks</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
    <script src="https://apis.google.com/js/api:client.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  </head>
  <body>

    <% if logged_in? %>
      <%= render partial: 'shared/logged_in_nav' %>
    <% else %>
      <%= render partial: 'shared/logged_out_nav' %>
    <% end %>

    <% if flash.any? %>
      <div id="flashes" class="ui <%= flash_class_name(flash.first.first) %> message transition hidden">
        <div class="header"><%= flash.first.second %></div>
      </div>
    <% end %>

    <div class="ui stackable grid">
      <div class="row landing-header-container">
        <div class="twelve wide column">
         <div class="title-words">West Coast Skateparks</div>
        </div>
        <div class="four wide column" >
          <div class='ui search center-text'>
            <%= form_tag(search_path, method: :get, class: 'search-form') do%>
              <div class="ui icon input">
                <%= text_field_tag :search, nil, placeholder: 'Search skateparks', required: true, id: 'search-input'  %>
                <i class="circular search link icon search-button"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>


    <div class="search-container"></div>

    <%= yield %>

    <div class="buffer"></div>

    <div id="footer" class="ui inverted segment">
      &copy West Coast Skateparks 2015
    </div>

    <!-- SIGN IN MODAL -->
    <%= render partial: 'shared/session_modal' %>


  </body>
</html>
