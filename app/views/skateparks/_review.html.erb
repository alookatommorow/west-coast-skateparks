<div class="comment">
  <div class="content">
    <a class="author"><%= review.user.display_name %></a>
    <div class="metadata">
      <div class="date">
        <%= review.created_at.strftime("%m/%d/%y") %>
      </div>
    </div>
    <div class="text">
      <%= review.review %>
    </div>
  </div>
</div>
