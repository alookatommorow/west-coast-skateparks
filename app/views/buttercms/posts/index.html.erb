<h2>Posts</h2>

<!-- List of posts -->
<% @posts.each do |post| %>
  <%= link_to post.title, buttercms_post_path(post.slug) %>
<% end %>

<!-- Pagination links -->
<div>
  <% if @previous_page %>
    <%= link_to "Prev", buttercms_blog_path(:page => @previous_page) %>
  <% end %>

  <% if @next_page %>
    <%= link_to "Next", buttercms_blog_path(:page => @next_page) %>
  <% end %>
</div>